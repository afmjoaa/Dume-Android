<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <!--Search one-->
    <PreferenceCategory
        android:key="pref_key_login_settings"
        android:title="Search">

        <ListPreference
            android:defaultValue="-1"
            android:icon="@drawable/ic_search_radius"
            android:entries="@array/search_radius_appearance_keys"
            android:entryValues="@array/search_radius_values"
            android:key="sync_frequency"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/search_radius_title" />

    </PreferenceCategory>


    <!--Appearance One -->
    <PreferenceCategory
        android:key="pref_key_login_settings"
        android:title="Appearance">

        <ListPreference
            android:defaultValue="180"
            android:entries="@array/search_radius_appearance_keys"
            android:entryValues="@array/search_radius_values"
            android:key="sync_frequency"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:selectable="false"
            android:shouldDisableView="true"
            android:icon="@drawable/ic_night_mode"
            android:title="@string/search_radius_title" />

        <ListPreference
            android:defaultValue="180"
            android:entries="@array/search_radius_appearance_keys"
            android:entryValues="@array/search_radius_values"
            android:key="sync_frequency"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:selectable="false"
            android:icon="@drawable/ic_offline_wallpaper"
            android:shouldDisableView="true"
            android:title="@string/search_radius_title" />

    </PreferenceCategory>

    <!--Notification one-->
    <PreferenceCategory
        android:key="pref_key_login_settings"
        android:title="Notifications">

        <SwitchPreference
            android:icon="@drawable/ic_notification_icon"
            android:defaultValue="true"
            android:key="notifications_new_message"
            android:title="@string/pref_title_new_message_notifications" />

        <RingtonePreference
            android:defaultValue="content://settings/system/notification_sound"
            android:dependency="notifications_new_message"
            android:key="notifications_new_message_ringtone"
            android:ringtoneType="notification"
            android:title="@string/pref_title_ringtone" />

        <SwitchPreference
            android:defaultValue="true"
            android:dependency="notifications_new_message"
            android:key="notifications_new_message_vibrate"
            android:title="@string/pref_title_vibrate" />

    </PreferenceCategory>

    <!--Reminder one-->
    <PreferenceCategory
        android:key="pref_key_login_settings"
        android:title="Reminder">

        <SwitchPreference
            android:icon="@drawable/ic_reminder_icon"
            android:defaultValue="true"
            android:key="notifications_new_message"
            android:title="@string/pref_title_new_message_notifications" />

        <RingtonePreference
            android:defaultValue="content://settings/system/notification_sound"
            android:dependency="notifications_new_message"
            android:key="notifications_new_message_ringtone"
            android:ringtoneType="notification"
            android:title="@string/pref_title_ringtone" />

        <SwitchPreference
            android:defaultValue="true"
            android:dependency="notifications_new_message"
            android:key="notifications_new_message_vibrate"
            android:title="@string/pref_title_vibrate" />

    </PreferenceCategory>


    <!--Login-->
    <PreferenceCategory
        android:key="pref_key_login_settings"
        android:title="Login">

        <EditTextPreference
            android:key="password"
            android:title="Change Password"
            android:icon="@drawable/ic_password_icon"

            />

        <EditTextPreference
            android:key="Password_hint"
            android:title="Change Password Hint"

            />
    </PreferenceCategory>


