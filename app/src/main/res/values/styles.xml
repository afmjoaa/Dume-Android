<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorNarvik</item>
        <item name="colorControlHighlight">@color/colorDarkAzure</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/cairo_regular</item>

    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="MyDarkBlueButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorDarkBlue</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MyStyleBtnOne" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorWhite</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="LoginTheme" parent="MyStyle">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#000000</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#f5f5f5</item>
        <item name="colorPrimaryDark">#c2c5cb</item>
        <item name="android:windowBackground">@color/MystyleWindowBackground</item>
        <item name="android:textColorPrimary">#505050</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#8c000000</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="MyTextApprncExp" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">#505050</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/cairo_regular</item>

    </style>

    <style name="AccountTitleExpand" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">#d9d9d9</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/cairo_regular</item>

    </style>

    <style name="MyTextApprncCol" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">#202020</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/cairo_regular</item>
    </style>

    <style name="MyTextApprncExp.darkBg" parent="MyTextApprncExp">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">25sp</item>

    </style>

    <style name="MyTextApprncCol.darkBg" parent="MyTextApprncCol">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>

    </style>


    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#9d9d9d</item>
        <item name="colorPrimaryDark">#00ffffff</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>
    <!--<item name="android:activatedBackgroundIndicator">@drawable/drawer_item_textcolor</item>-->

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/cairo_regular</item>
    </style>

    <style name="CollapsingToolBarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/cairo_regular</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
<!--testing here -->


    <style name="EnamTextAppearanceNormal" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AccountToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>



</resources>
