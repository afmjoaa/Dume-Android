    <style name="AppTheme.NoActionBar.transparent.black" parent="AppTheme.NoActionBar.transparent">
        <item name="colorPrimary">@color/carbon_black</item>
        <item name="colorPrimaryDark">@color/carbon_black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="AppTheme.NoActionBar.transparent.testing" parent="AppTheme.NoActionBar.transparent">
        <item name="colorPrimary">@color/inbox_active_color</item>
        <item name="colorPrimaryDark">@color/inbox_active_color_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="AppTheme.NoActionBar.transparent.default" parent="AppTheme.NoActionBar.transparent">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.transparent.defaultTwo" parent="AppTheme.NoActionBar.transparent">
        <item name="colorPrimary">@color/toolbar_defaultTwo</item>
        <item name="colorPrimaryDark">@color/status_defaultTwo</item>
    </style>

    <style name="AppTheme.NoActionBar.transparent.pending" parent="AppTheme.NoActionBar.transparent">
        <item name="colorPrimary">@color/toolbar_pending</item>
        <item name="colorPrimaryDark">@color/status_pending</item>
    </style>

    <style name="AppTheme.NoActionBar.transparent.rejected" parent="AppTheme.NoActionBar.transparent">
        <item name="colorPrimary">@color/toolbar_rejected</item>
        <item name="colorPrimaryDark">@color/status_rejected</item>
    </style>

    <style name="AppTheme.NoActionBar.transparent.accepted" parent="AppTheme.NoActionBar.transparent">
        <item name="colorPrimary">@color/toolbar_accepted</item>
        <item name="colorPrimaryDark">@color/status_accepted</item>
    </style>

    <style name="AppTheme.NoActionBar.transparent.current" parent="AppTheme.NoActionBar.transparent">
        <item name="colorPrimary">@color/toolbar_current</item>
        <item name="colorPrimaryDark">@color/status_current</item>
    </style>

    <style name="AppTheme.NoActionBar.transparent.completed" parent="AppTheme.NoActionBar.transparent">
        <item name="colorPrimary">@color/toolbar_completed</item>
        <item name="colorPrimaryDark">@color/status_completed</item>
    </style>

    <style name="EnamTextAppearanceNormal" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AccountToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
        <!--<item name="android:textColorSecondary">@color/white</item>-->
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="myButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/my_btn_background</item>
    </style>

    <style name="myButtonStyleWhite" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/my_btn_background_white</item>
    </style>

    <style name="myButtonStyleAccent" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/my_btn_background_accent</item>
    </style>

    <style name="myButtonStyleDisable" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/my_btn_background_disable</item>
    </style>

    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#4db6ac</item>
        <item name="colorSwitchThumbNormal">#eeeeee</item>
    </style>


