<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <carbon.widget.RelativeLayout
        android:id="@+id/hosting_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        app:carbon_cornerRadius="6dp"
        app:carbon_elevation="2dp"
        app:carbon_rippleColor="@color/colorRippleDefault">

        <TextView
            android:id="@+id/reportTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Due / Obligation"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/hosting_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reportTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/beforeDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:text="$15.6k"
                android:textSize="14sp"
                android:textStyle="italic" />

            <View
                android:id="@+id/red_cut"
                android:layout_width="48dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/red"
                android:translationY="11dp" />

            <TextView
                android:id="@+id/discountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/beforeDiscount"
                android:layout_toRightOf="@+id/beforeDiscount"
                android:text="50% off"
                android:textColor="@color/red"
                android:textSize="10sp"
                android:textStyle="italic"
                android:visibility="gone"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/afterDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/beforeDiscount"
                android:layout_toRightOf="@+id/beforeDiscount"
                android:gravity="center"
                android:text="$13.8k"
                android:textColor="@color/colorLink"
                android:textSize="14sp" />

        </RelativeLayout>

    </carbon.widget.RelativeLayout>

    <carbon.widget.RelativeLayout
        android:id="@+id/hosting_relative_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        app:carbon_cornerRadius="6dp"
        app:carbon_elevation="2dp"
        app:carbon_rippleColor="@color/colorRippleDefault">

        <TextView
            android:id="@+id/reportTitle_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Due / Obligation"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/hosting_layout_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reportTitle_one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/beforeDiscount_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:text="$15.6k"
                android:textSize="14sp"
                android:textStyle="italic" />

            <View
                android:id="@+id/red_cut_one"
                android:layout_width="48dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/red"
                android:translationY="11dp" />

            <TextView
                android:id="@+id/discountTV_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/beforeDiscount_one"
                android:layout_toRightOf="@+id/beforeDiscount_one"
                android:text="50% off"
                android:textColor="@color/red"
                android:textSize="10sp"
                android:textStyle="italic"
                android:visibility="gone"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/afterDiscount_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/beforeDiscount_one"
                android:layout_toRightOf="@+id/beforeDiscount_one"
                android:gravity="center"
                android:text="$13.8k"
                android:textColor="@color/colorLink"
                android:textSize="14sp" />

        </RelativeLayout>


    </carbon.widget.RelativeLayout>

</LinearLayout>