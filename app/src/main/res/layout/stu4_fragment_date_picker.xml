<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/date_picker_relative"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_startDate_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/date_picker_Et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Starting Date"
                android:hint="Starting Date"
                android:onClick="onAcademicClick"
                android:focusable="false"
                android:inputType="date"
                app:fontFamily="@font/cairo_regular" />

        </com.google.android.material.textfield.TextInputLayout>

        <carbon.widget.ImageView
            android:id="@+id/empty_startDate_found"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/search_icon"
            android:translationY="5dp"
            android:visibility="gone"
            app:carbon_cornerRadius="8dp"
            app:carbon_elevation="1dp"
            app:srcCompat="@drawable/ic_empty_field" />

    </RelativeLayout>

</LinearLayout>

