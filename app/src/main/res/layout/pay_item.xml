<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hosting_relative_layout"
    android:layout_width="121dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:padding="10dp"
    app:carbon_cornerRadius="6dp"
    app:carbon_elevation="2dp"
    app:carbon_rippleColor="@color/colorRippleDefault">

    <TextView
        android:id="@+id/reportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Due / Obligation"
        android:textAllCaps="false"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/hosting_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/beforeDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:text="$15.6k"
            android:textSize="14sp"
            android:textStyle="italic" />

        <View
            android:id="@+id/red_cut"
            android:layout_width="54dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/red"
            android:translationY="11dp" />

        <TextView
            android:id="@+id/discountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/beforeDiscount"
            android:layout_toRightOf="@+id/beforeDiscount"
            android:text="50% off"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:textStyle="italic"
            android:visibility="gone"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/afterDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/beforeDiscount"
            android:layout_toRightOf="@+id/beforeDiscount"
            android:gravity="center"
            android:text="$13.8k"
            android:textColor="@color/colorLink"
            android:textSize="14sp" />

    </RelativeLayout>


</carbon.widget.RelativeLayout>