<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Skill updater"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        app:fontFamily="@font/cairo_regular" />

    <TextView
        android:id="@+id/sub_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please update your __ skill subject and salary. "
        android:textColor="@color/textColorPrimary"
        android:textSize="14sp"
        app:fontFamily="@font/cairo_regular" />


    <TextView
        android:id="@+id/minSal"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:background="@drawable/border_background"
        android:paddingStart="6dp"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="4dp"
        android:text="Salary : "
        android:textSize="16sp" />

    <com.appyvet.materialrangebar.RangeBar
        android:id="@+id/rangeSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:mrb_connectingLineColor="@color/colorAccent"
        app:mrb_pinColor="@color/colorAccent"
        app:mrb_pinMaxFont="12sp"
        app:mrb_pinMinFont="12sp"
        app:mrb_pinPadding="5dp"
        app:mrb_pinRadius="14dp"
        app:mrb_pinTextColor="@color/white"
        app:mrb_rangeBar="false"
        app:mrb_rangeBarPaddingBottom="16dp"
        app:mrb_rangeBar_rounded="true"
        app:mrb_selectorBoundaryColor="@color/colorAccent"
        app:mrb_selectorBoundarySize="2dp"
        app:mrb_selectorColor="@color/colorAccent"
        app:mrb_selectorSize="5dp"
        app:mrb_temporaryPins="false"
        app:mrb_tickColor="@color/textColorSecondaryDark"
        app:mrb_tickEnd="40"
        app:mrb_tickInterval="1"
        app:mrb_tickStart="1" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_c_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/input_subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Chosen Subjects"
            android:inputType="textEmailAddress"
            app:fontFamily="@font/cairo_regular" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/cancel_parent_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_no_btn"
            style="@style/myButtonStyleWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:text="Dismiss"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:fontFamily="@font/cairo_regular" />

        <Button
            android:id="@+id/cancel_yes_btn"
            style="@style/myButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:drawablePadding="0dp"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:fontFamily="@font/cairo_regular" />

    </LinearLayout>

</LinearLayout>

