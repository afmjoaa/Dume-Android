<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jdfudhufhduh"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:fontFamily="@font/cairo_regular" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jdfudhufhduh"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="16sp"
        app:fontFamily="@font/cairo_light" />

    <Button
        android:id="@+id/asTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_button_before_pressed"
        app:fontFamily="@font/cairo_regular"
        android:textAllCaps="false"
        android:text="As a Teacher"
        android:textColor="@color/white" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="@color/textColorSecondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textColor="@color/textColorPrimary"
            app:fontFamily="@font/cairo_regular"
            android:textSize="11sp" />

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="@color/textColorSecondary" />

    </LinearLayout>

    <Button
        android:id="@+id/asStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_button_before_pressed"
        app:fontFamily="@font/cairo_regular"
        android:textAllCaps="false"
        android:text="As a Student"
        android:textColor="@color/white" />


</LinearLayout>
