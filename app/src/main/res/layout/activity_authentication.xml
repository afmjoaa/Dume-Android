<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_coor_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.auth.AuthActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleGravity="bottom"
            app:collapsedTitleTextAppearance="@style/MyTextApprncCol"
            app:contentScrim="@color/black"
            app:expandedTitleGravity="start"
            app:expandedTitleMarginBottom="@dimen/expTittleMarginBottom"
            app:expandedTitleMarginStart="@dimen/expTittleMarginStart"
            app:expandedTitleMarginTop="@dimen/expTittleMarginTop"
            app:scrimVisibleHeightTrigger="86dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="true">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slidingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/slide_background"
                android:clipToPadding="false">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:contentDescription="@string/dume"
                    android:elevation="30dp"
                    android:src="@drawable/dume_large_icon" />

                <com.daimajia.slider.library.Indicators.PagerIndicator
                    android:id="@+id/page_indicator"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    app:selected_color="#4C5264"
                    app:selected_height="8dp"
                    app:selected_padding_left="2dp"
                    app:selected_padding_right="2dp"
                    app:selected_width="8dp"
                    app:shape="oval"
                    app:unselected_color="#D0E9FA"
                    app:unselected_height="8dp"
                    app:unselected_padding_left="2dp"
                    app:unselected_padding_right="2dp"
                    app:unselected_width="8dp" />
            </com.daimajia.slider.library.SliderLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/authToolbar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="bottom"
                app:buttonGravity="bottom"
                app:logo="@drawable/signin_logo"
                app:layout_collapseMode="pin"
                app:titleMarginBottom="@dimen/titleMarginBottom"
                app:titleMarginStart="@dimen/titleMarginStart"
                app:titleMarginTop="@dimen/titleMarginTop"
                app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:theme="@style/ThemeToolbar.default"
                app:title="" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <io.dume.dume.customView.HorizontalLoadView
        android:id="@+id/loadView"
        android:layout_width="20dp"
        android:layout_height="3dp"
        android:elevation="8dp"
        android:translationY="2dp"
        android:background="@drawable/bg_black_bottom_less_round"
        app:layout_anchor="@id/appbarLayout"
        android:visibility="gone"
        app:layout_anchorGravity="bottom"
        app:rect_color="@color/transparent" />


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_anchor="@+id/scroll_view"
        app:layout_anchorGravity="top|center"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/phoneInputContainer"
                layout="@layout/activity_authentication_number_input_section" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <TextView
        android:id="@+id/socialConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/cairo_regular"
        android:paddingBottom="10dp"
        android:text="@string/socialConnect"
        android:textSize="15sp"
        app:layout_anchor="@id/bottomNav"
        app:layout_anchorGravity="top|start" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNav"
        style="@style/Widget.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@drawable/color_state_list"
        app:itemTextColor="@drawable/color_state_list"
        app:menu="@menu/bottom_nav_menu">

    </android.support.design.widget.BottomNavigationView>

</android.support.design.widget.CoordinatorLayout>