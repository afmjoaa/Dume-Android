<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hostRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingRight="16dp">


    <carbon.widget.Button
        android:id="@+id/percent_off_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60% Off / Dume Gang"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAllCaps="false"
        app:carbon_backgroundTint="@color/percent_off_active_color" />

    <TextView
        android:id="@+id/valid_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="Dec 12, 2018"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="12sp"
        android:translationY="7dp" />

    <TextView
        android:id="@+id/valid_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valid_time_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="9 agreement left"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="12sp"
        android:translationY="3dp"/>

    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/percent_off_btn"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:text="Congrats! you,ve unlocked 60% off on your next 9 Dume agreements! Max disc Tk 100 | Valid till Dec 12, 2018"
        android:textAppearance="?android:attr/textAppearanceListItem"
        app:fontFamily="@font/cairo_regular" />


    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/info_text"
        android:layout_marginTop="16dp"
        android:background="#41a7a7a7" />

</RelativeLayout>