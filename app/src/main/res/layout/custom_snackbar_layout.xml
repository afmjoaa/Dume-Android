<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_snackbar_layout"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/custom_snackbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:text="Error messages"
        android:textSize="13sp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|end"
        android:id="@+id/snackbar_btn">

        <ImageView
            android:id="@+id/custom_snackbar_btnImage"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/retry_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/refresh"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/custom_snackbar_btnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:text="Retry"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginEnd="30dp"
            android:textColor="@color/colorBlack"
            android:layout_marginRight="30dp" />

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>