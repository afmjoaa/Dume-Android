<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textAllCaps="true"
        android:textColor="@color/colorMaterialBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/locationTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_action_home"
            android:drawablePadding="3dp"
            android:drawableStart="@drawable/ic_action_home"
            android:gravity="center_vertical"
            android:text="West Mollartek Uttara,Dhaka" />

        <Button
            android:id="@+id/updateBTN"
            style="@style/MyEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_update"
            android:drawableStart="@drawable/ic_action_update"
            android:gravity="center"
            android:text="Update"
            android:onClick="onViewClicked"
            android:textColor="@color/colorLink"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/warningTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:drawableTop="@drawable/warning_icon_light"
        android:gravity="center"
        android:text="no qualification added yet"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start">

        <Button
            android:id="@+id/addLocationBTN"
            style="@style/MyEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_edit_button_colored"
            android:drawableStart="@drawable/ic_action_edit_button_colored"
            android:gravity="center"
            android:text="Add"
            android:onClick="onViewClicked"
            android:textColor="@color/colorLink" />

    </LinearLayout>

</LinearLayout>