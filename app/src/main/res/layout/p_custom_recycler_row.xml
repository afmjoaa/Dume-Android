<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_hosting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round_corner_rela_layout"
    android:paddingBottom="16dp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/hostRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_round_corner"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Date" />

        <TextView
            android:id="@+id/amountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/dateTV"

            android:layout_weight="1"
            android:gravity="center"

            android:text="Amount" />

        <TextView
            android:id="@+id/statusTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/amountTV"

            android:layout_weight="1"
            android:gravity="center"

            android:text="Status" />

        <TextView
            android:id="@+id/methodTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_margin="5dp"

            android:layout_toRightOf="@id/statusTV"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Method" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/p_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hostRelativeLayout" />

    <TextView
        android:id="@+id/notFoundTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="No Payment History Found" />


</RelativeLayout>