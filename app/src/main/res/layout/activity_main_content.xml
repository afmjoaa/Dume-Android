<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_coor_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/mainAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:elevation="1dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="snap"

            app:title="@string/app_name"
            app:titleTextColor="#7e7e7e">

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_icon" />

                <View
                    android:id="@+id/first_dot"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/dot_circle_background" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:paddingBottom="75dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:id="@+id/teacherActivitySV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Earning Report"
                        android:textSize="18sp"
                        android:layout_margin="5dp"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/reportRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                    </android.support.v7.widget.RecyclerView>

                    <!--rating layout -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Performance"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/rating_host_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <carbon.widget.LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:baselineAligned="false"
                            android:orientation="vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            app:carbon_elevation="8dp">

                            <Button
                                android:id="@+id/show_additional_rating_btn"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableBottom="@drawable/ic_down_arrow_small"
                                android:drawablePadding="2dp"
                                android:text="Feature Rating"
                                android:textAllCaps="false"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="16sp"
                                android:visibility="gone"
                                app:fontFamily="@font/cairo_regular" />

                        </carbon.widget.LinearLayout>

                        <LinearLayout
                            android:id="@+id/rating_layout_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical"
                            android:translationY="-2dp">

                            <LinearLayout
                                android:id="@+id/rating_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:baselineAligned="false"
                                android:orientation="horizontal">


                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="20dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/bg_white_bottom_round">

                                        <TextView
                                            android:id="@+id/rating_title_performance"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerHorizontal="true"
                                            android:singleLine="true"
                                            android:text="Performance"
                                            android:textAlignment="center"
                                            android:textSize="12sp"
                                            app:fontFamily="@font/cairo_regular" />

                                        <carbon.widget.ImageView
                                            android:id="@+id/main_rating_performance"
                                            android:layout_width="56dp"
                                            android:layout_height="56dp"
                                            android:layout_below="@+id/rating_title_performance"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="2dp"
                                            app:carbon_cornerRadius="28dp"
                                            app:srcCompat="@drawable/rating_performance_layer_list" />


                                        <TextView
                                            android:id="@+id/txtStatus"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/main_rating_performance"
                                            android:layout_alignParentBottom="true"
                                            android:layout_centerHorizontal="true"
                                            android:background="@drawable/bg_rating_textview"
                                            android:drawableEnd="@drawable/ic_person_small"
                                            android:drawableRight="@drawable/ic_person_small"
                                            android:drawablePadding="5dp"
                                            android:gravity="center"
                                            android:paddingLeft="6dp"
                                            android:paddingTop="1dp"
                                            android:paddingRight="6dp"
                                            android:paddingBottom="1dp"
                                            android:singleLine="true"
                                            android:text="1234"
                                            android:textColor="@color/white"
                                            android:textSize="8sp"
                                            android:translationY="-9dp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="20dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/bg_white_bottom_round">

                                        <TextView
                                            android:id="@+id/rating_title_accept_ratio"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerHorizontal="true"
                                            android:singleLine="true"
                                            android:text="A-Ratio"
                                            android:textAlignment="center"
                                            android:textSize="12sp"
                                            app:fontFamily="@font/cairo_regular" />

                                        <com.jackandphantom.circularprogressbar.CircleProgressbar
                                            android:id="@+id/rating_main_accept_ratio"
                                            android:layout_width="52dp"
                                            android:layout_height="52dp"
                                            android:layout_below="@+id/rating_title_accept_ratio"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="3dp"
                                            android:background="@drawable/rating_accept_ratio_layer_list"
                                            android:rotation="180"
                                            app:cpb_backgroundProgressColor="#4b686969"
                                            app:cpb_backgroundProgressWidth="4"
                                            app:cpb_clockwise="true"
                                            app:cpb_foregroundProgressColor="#00796B"
                                            app:cpb_foregroundProgressWidth="6"
                                            app:cpb_progress="80"
                                            app:cpb_roundedCorner="true" />

                                        <TextView
                                            android:id="@+id/txtStatus_accept_ratio"
                                            android:layout_width="35dp"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/rating_main_accept_ratio"
                                            android:layout_alignParentBottom="true"
                                            android:layout_centerHorizontal="true"
                                            android:background="@drawable/bg_rating_textview"
                                            android:drawablePadding="5dp"
                                            android:gravity="center"
                                            android:paddingLeft="6dp"
                                            android:paddingTop="1dp"
                                            android:paddingRight="6dp"
                                            android:paddingBottom="1dp"
                                            android:singleLine="true"
                                            android:text="80 %"
                                            android:textColor="@color/white"
                                            android:textSize="8sp"
                                            android:translationY="-6dp" />


                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="20dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/bg_white_bottom_round">

                                        <TextView
                                            android:id="@+id/rating_title_experience"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerHorizontal="true"
                                            android:drawablePadding="5dp"
                                            android:singleLine="true"
                                            android:text="Experience "
                                            android:textAlignment="center"
                                            android:textSize="12sp"
                                            app:fontFamily="@font/cairo_regular" />

                                        <carbon.widget.ImageView
                                            android:id="@+id/main_rating_experience"
                                            android:layout_width="56dp"
                                            android:layout_height="56dp"
                                            android:layout_below="@+id/rating_title_experience"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="2dp"
                                            app:carbon_cornerRadius="28dp"
                                            app:srcCompat="@drawable/rating_experience_layer_list" />


                                        <TextView
                                            android:id="@+id/txtStatus_experience"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/main_rating_experience"
                                            android:layout_alignParentBottom="true"
                                            android:layout_centerHorizontal="true"
                                            android:background="@drawable/bg_rating_textview"
                                            android:drawableEnd="@drawable/ic_person_small"
                                            android:drawableRight="@drawable/ic_person_small"
                                            android:drawablePadding="5dp"
                                            android:gravity="center"
                                            android:paddingLeft="6dp"
                                            android:paddingTop="1dp"
                                            android:paddingRight="6dp"
                                            android:paddingBottom="1dp"
                                            android:singleLine="true"
                                            android:text="1234"
                                            android:textColor="@color/white"
                                            android:textSize="8sp"
                                            android:translationY="-9dp" />
                                    </RelativeLayout>



                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/rating_other_skills"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/rating_skills"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/bg_rating_tittle"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="2dp"
                                    android:paddingRight="20dp"
                                    android:paddingBottom="2dp"
                                    android:singleLine="true"
                                    android:text="Skills"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="12sp"
                                    android:visibility="gone"
                                    app:fontFamily="@font/cairo_regular" />

                                <com.hadiidbouk.charts.ChartProgressBar
                                    android:id="@+id/myChartProgressBar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    app:hdBarCanBeClick="true"
                                    app:hdBarHeight="160dp"
                                    app:hdBarRadius="10dp"
                                    app:hdBarTitleColor="@color/textColorPrimary"
                                    app:hdBarTitleMarginTop="9dp"
                                    app:hdBarTitleSelectedColor="@color/colorBlack"
                                    app:hdBarTitleTxtSize="12sp"
                                    app:hdBarWidth="7dp"
                                    app:hdEmptyColor="@color/empty"
                                    app:hdMaxValue="10"
                                    app:hdPinBackgroundColor="@color/pin_background"
                                    app:hdPinDrawable="@drawable/ic_pin"
                                    app:hdPinMarginBottom="20dp"
                                    app:hdPinMarginEnd="11dp"
                                    app:hdPinPaddingBottom="5dp"
                                    app:hdPinTextColor="@color/pin_text"
                                    app:hdPinTxtSize="12sp"
                                    app:hdProgressClickColor="@color/progress_click"
                                    app:hdProgressColor="@color/progress"
                                    app:hdProgressDisableColor="@color/progress_disable" />

                            </RelativeLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/feedbackRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                    </android.support.v7.widget.RecyclerView>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/inboxRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Statistics"
                            android:textSize="18sp" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/teacherChartStatistics"
                            android:layout_width="match_parent"
                            android:layout_height="200dp" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_musk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:visibility="gone">


    </FrameLayout>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/secondary_Appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbarLayoutHeightLow"
        android:alpha="0.0"
        android:background="@color/colorBlack"
        android:fitsSystemWindows="true"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:visibility="invisible">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/secondary_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/colorBlack"
            android:fitsSystemWindows="true"
            app:collapsedTitleGravity="start"
            app:collapsedTitleTextAppearance="@style/MyTextApprncCol.darkBg"
            app:expandedTitleGravity="start"
            app:expandedTitleMargin="15dp"
            app:expandedTitleMarginBottom="@dimen/expTittleMarginBottom"
            app:expandedTitleMarginStart="@dimen/expTittleMarginStart"
            app:expandedTitleMarginTop="@dimen/expTittleMarginTop"
            app:expandedTitleTextAppearance="@style/MyTextApprncExp.darkBg"
            app:layout_scrollFlags="snap|enterAlways"
            app:scrimVisibleHeightTrigger="@dimen/scrimVisibleHeightTrigger"
            app:title="Tips"
            app:titleEnabled="true">


            <android.support.v7.widget.Toolbar
                android:id="@+id/Secondary_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/AccountToolbarStyle"
                app:buttonGravity="bottom"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
                app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Dark"
                app:titleMarginBottom="@dimen/titleMarginBottom"
                app:titleMarginStart="@dimen/titleMarginStart"
                app:titleMarginTop="@dimen/titleMarginTop">


            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <!--<include layout="@layout/activity_main_bottom_sheet" />-->

    <LinearLayout
        android:id="@+id/amBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        app:behavior_peekHeight="75dp"
        app:elevation="8dp"
        app:layout_behavior="@string/bottom_sheet_behavior">


        <io.dume.dume.customView.HorizontalLoadView
            android:id="@+id/bsLoad"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:translationY="5dp"
            android:visibility="gone"
            app:layout_anchor="@id/messagesRV"
            app:layout_anchorGravity="top" />

        <ListView
            android:id="@+id/messagesRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Education"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>