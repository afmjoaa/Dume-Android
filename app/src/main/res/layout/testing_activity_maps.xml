<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.homepage.MapsActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout_img_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:background="#fff"
        android:elevation="10dp"
        android:padding="0dp">

        <Button
            android:id="@+id/search_mentor_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:alpha="65"
            android:backgroundTint="@color/semi_transpatent_ashe"
            android:drawableLeft="@drawable/search_icon"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/search_icon"
            android:gravity="start|center_vertical"
            android:shadowColor="@color/semi_transpatent_ashe"
            android:stateListAnimator="@drawable/appbar_no_elevation"
            android:text="@string/search_mentors"
            android:textAllCaps="false"
            android:textColor="@color/stu_text_color"
            android:textSize="18sp"
            android:textStyle="normal"
            tools:targetApi="lollipop" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/semi_transpatent_ashe"
        app:fabSize="mini"
        app:srcCompat="@drawable/geo_icon" />

</android.support.design.widget.CoordinatorLayout>

