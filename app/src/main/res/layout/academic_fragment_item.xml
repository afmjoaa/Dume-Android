<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/hosting_relative_layout"
    android:background="@color/white"
    android:padding="10dp"
    android:clickable="true"
    android:focusable="true"
    app:carbon_elevation="1dp"
    app:carbon_rippleColor="@color/colorRippleDefault"
    app:carbon_cornerRadius="6dp">

    <RelativeLayout
        android:id="@+id/left_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <carbon.widget.ImageView
            android:id="@+id/search_detail_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:clickable="false"
            app:srcCompat="@drawable/academic_school" />


        <TextView
            android:id="@+id/levelET"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_detail_icon"
            android:layout_centerHorizontal="true"
            android:text="BSc in CSE"
            android:textAlignment="center"
            android:textColor="@color/textColorPrimary"
            android:textSize="11sp" />
    </RelativeLayout>

    <View
        android:id="@+id/vertical_divider"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/left_host"
        android:layout_toRightOf="@+id/left_host"
        android:background="#eee4e3e4" />

    <TextView
        android:id="@+id/institutionET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/vertical_divider"
        android:layout_toRightOf="@+id/vertical_divider"
        android:text="MIST -Military Institute Of Science and Technology"
        android:textColor="@color/black"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/sessionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/institutionET"
        android:layout_toEndOf="@+id/vertical_divider"
        android:layout_toRightOf="@+id/vertical_divider"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Session 2012-2016"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/resultTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sessionTV"
        android:layout_toEndOf="@+id/vertical_divider"
        android:layout_toRightOf="@+id/vertical_divider"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="A+ (CGPA)"
        android:textSize="11sp" />

</carbon.widget.RelativeLayout>