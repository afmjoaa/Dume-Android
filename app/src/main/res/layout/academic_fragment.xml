<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacher.homepage.fragments.AcademicFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/academicRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/no_data_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="36dp"
        android:visibility="gone">

        <carbon.widget.ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:carbon_elevation="3dp"
            app:srcCompat="@drawable/no_data_wallpaper" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Sorry, no qualification to show right now..."
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/textColorSecondaryDark"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/more_btn"
        style="@style/myButtonStyleWhite"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="2dp"
        android:drawableStart="@drawable/ic_more_item"
        android:drawableLeft="@drawable/ic_more_item"
        android:paddingStart="25dp"
        android:paddingLeft="25dp"
        android:paddingEnd="25dp"
        android:paddingRight="25dp"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:fontFamily="@font/cairo_regular" />

    <Button
        android:id="@+id/add_qualification_btn"
        style="@style/myButtonStyleWhite"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_toStartOf="@id/more_btn"
        android:layout_toLeftOf="@id/more_btn"
        android:drawableStart="@drawable/ic_add_fragment_color"
        android:drawableLeft="@drawable/ic_add_fragment_color"
        android:paddingStart="25dp"
        android:paddingLeft="25dp"
        android:paddingEnd="25dp"
        android:paddingRight="25dp"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:fontFamily="@font/cairo_regular" />

</RelativeLayout>